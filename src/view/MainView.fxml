<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <Label text="Currency Conversion System" />
    <HBox spacing="10">
        <Label text="Amount:" />
        <TextField fx:id="amountTextField" />
    </HBox>
    <HBox spacing="10">
        <Label text="From Currency:" />
        <ComboBox fx:id="fromCurrencyComboBox" />
    </HBox>
    <HBox spacing="10">
        <Label text="To Currency:" />
        <ComboBox fx:id="toCurrencyComboBox" />
    </HBox>
    <Button text="Convert" onAction="#convertButtonClicked" />
</VBox>
